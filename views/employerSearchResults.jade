extends layout
include ./mixins/userCard

// author: Sabrina Drammis

block nav_right
 a.navbar-brand(href="/logout") Logout

block content
  .container
    .row
      .col-md-12
        h3 Search Results
          a.btn.btn-default.pull-right(href="/employers") Revise Search
    .row
      .col-md-6
        .list-group
          each employer in employers
            a.list-group-item.listed-student
              +userCard(employer)
      .col-md-6.fixed
        .panel.panel-default
          .panel-body#featuredStudent
            p click on an employer
