h4.list-group-item-heading= student.name
#id(style="display:none")= student._id
h5= student.email
h4 Skills
  each skill in student.skills
    h4(style="display: inline-block; padding: 3px")
      span.label.label-primary= skill.name
  each klass in student.classes
    each skill in klass.skills
      h4(style="display: inline-block; padding: 3px")
        span.label.label-default= skill.name
