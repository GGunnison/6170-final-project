doctype html

// author: Daniel Sanchez, Sabrina Drammis

html
  head
    title= title

    // jQuery
    script(type="text/javascript", src="/js/jquery/jquery-1.11.1.min.js")

    // Bootstrap
    link(rel="stylesheet", href="/css/bootstrap.min.css")
    script(type='text/javascript', src='/js/bootstrap/bootstrap.min.js')

    // Angular
    script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.min.js")
    script(type="text/javascript", src="/js/angularApp.js")

    // Font awesome
    link(rel="stylesheet", href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css")

    // Main css
    link(rel='stylesheet', href='/css/style.css')

    // Other styles
    block head

  body(data-ng-app="employMeApp", data-ng-controller="employMeAppController")
    block content
    // navigation bar at top of all pages
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
      // left title
      .navbar-header
        a.navbar-brand(href="/") Employ.Me
      div.pull-right
        // contains username info if logged in
        block nav_right
            a.navbar-brand(href="/logout") Logout
