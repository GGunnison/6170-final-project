extends layout
include ./mixins/userCard

// author: Sabrina Drammis
block head
  script(type="text/javascript", src="/js/searchResultsController.js")

block nav_right
 a.navbar-brand(href="/logout") Logout

block content
  .container
    .row
      .col-md-12
        h3 Search Results
          a.btn.btn-default.pull-right(href="/students") Revise Search
    .row
      .col-md-6
        .list-group
          each student in students
            a.list-group-item.listed-student
              +userCard(student)
      .col-md-6.fixed
        .panel.panel-default
          .panel-body#featuredStudent
            p click on a student
