extends layout

block content
  .container
    form(name="search", action="/students/search", method="post")
      .row
        h2 Search For a Student
      .row
        h4 Required
        .col-md-8
          each skill in skills
            .checkbox
              input(type="checkbox", name="requiredSkills[]", value="#{skill._id}")
              label(for="checkbox1")= skill.name
      .row
        h4 Desired
        .col-md-8
          each skill in skills
            .checkbox
              input(type="checkbox", name="desiredSkills[]", value="#{skill._id}")
              label(for="checkbox1")= skill.name
      .row
        input.btn.btn-primary(type="submit", value="Search")
