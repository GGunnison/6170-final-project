extends layout

block head
  link(rel="stylesheet", href="/css/studentProfileCreation.less")
  script(type="text/javascript", src="/js/studentProfileCreationController.js")

block content
  script.
    var studentProfileCreationController = new StudentProfileCreationController();
    $(document).ready(function() {
      studentProfileCreationController.init();
    });

  .panel.panel-default
    .panel-heading
      #questionTitle.panel-title Skills
    .panel-body
      form#allSkillsForm
        input(type="hidden", name="studentId", value="#{studentId}")
        legend
          #question Check off any skills that apply to you

        #skillsContainer
          each skill in skills
            input(type="checkbox", name="skills[]", value="#{skill._id}")
            span &nbsp;
            span #{skill.name}
            br

        br

        legend
          #question Check off any classes you've taken

        #classesContainer
          input(type="hidden", name="studentId", value="#{studentId}")
          each subject in classes
            input(type="checkbox", name="classes[]", value="#{subject._id}")
            span &nbsp;
            span #{subject._id}: #{subject.name}
            br

        input.btn.btn-success(type="submit", value="Submit")
